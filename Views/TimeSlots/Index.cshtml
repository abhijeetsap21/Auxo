@model IEnumerable<NewLetter.Models.slot>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Employer.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("New Slot", "Create")
</p>
<table class="table">
    <tr>
        <th>Sr</th>
        <th>
            Time Slots
        </th>
        <th></th>
    </tr>
    @{int rowNo = 0;}
@foreach (var item in Model) {
    <tr>
        <td>@(rowNo += 1) </td>
        <td>
            @Html.DisplayFor(modelItem => item.slotTime)
        </td>
        <td>           
            <a onclick="location.href='@Url.Action("Edit", "TimeSlots",new {id=item.SlotID })'"><i class='glyphicon glyphicon-edit'></i></a>
           
        </td>
    </tr>
}

</table>
