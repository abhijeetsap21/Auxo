@model NewLetter.Models.slot

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_Employer.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="form-group">
                @Html.LabelFor(model => model.slotTime, htmlAttributes: new { @class = "col-md-6 col-sm-6 col-xs-12 control-label" })
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.EditorFor(model => model.slotTime, new { @class = "form-control", placeholder = "10 AM-11 AM" })
                    @Html.ValidationMessageFor(model => model.slotTime, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />@Html.ActionLink("Back to List", "Index")
            </div>

        </div>
    </div>
}


    @Scripts.Render("~/bundles/jqueryval")

