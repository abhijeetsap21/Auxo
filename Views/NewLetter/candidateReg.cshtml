@model NewLetter.Models.candidateRegistration

@{
    ViewBag.Title = "candidateReg";
}
<head>
    <!-- Bootstrap -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body>
@using (Html.BeginForm("candidateReg", "NewLetter", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
   
   
        <div class="form-box">
            <div class="form-top">
                <div class="form-top-left">
                    <p><strong>Don't have an account?</strong></p>
                    <h3>Register Now</h3>
                </div>                
                <div class="form-top-right"> <i class="fa fa-pencil"></i> </div>
            </div>
            <div class="form-bottom">
                <form role="form" action="" method="post" class="login-form">
                    @*@Html.AntiForgeryToken()*@
                    
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(model => model.candidateName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your Full Name" } })
                        @Html.ValidationMessageFor(model => model.candidateName, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your Email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-phone-alt"></i></span>
                        @Html.EditorFor(model => model.candidatePhone, new { htmlAttributes = new { @class = "form-control" , placeholder = "Enter your Phone"} })
                        @Html.ValidationMessageFor(model => model.candidatePhone, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn">Register</button>
                </form>
            </div>
            </div>
            <div class="social-login">
                <h6>...or login with:</h6>
                <div class="social-login-buttons"> <a href='@Url.Action("Facebook","Account")' class="btn btn-link-1"> <img src="~/images/facebook-btn.jpg" alt="Facebook"> </a> <a href="https://www.linkedin.com/oauth/v2/authorization?response_type=code&client_id=8183ea15suyzy4&redirect_uri=http%3A%2F%2Flocalhost:51126%2FAccount%2FlinkdInReg&state=987654321" class="btn btn-link-1"> <img src="~/images/linkedin-btn.jpg" alt="Linkedin"> </a> <a href='@Url.Action("googleReg","Account")' class="btn btn-link-1"> <img src="~/images/googlebtn.jpg" alt="Google+"> </a> </div>
            </div>
}
</body>