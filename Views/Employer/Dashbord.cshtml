@model IEnumerable<NewLetter.Models.sp_EmployerDashborad_Result>
@using NewLetter.Models;
    @{
        ViewBag.Title = "Dashbord";
        Layout = "~/Views/Shared/_Layout_Employer.cshtml";
    }
@section head{
    <script type="text/javascript">
        var jqOld = jQuery.noConflict();
        jqOld(document).ready(function () {
            jqOld('#myDataTable').dataTable().makeEditable();
            });
    </script>
}
<div class="form-horizontal">
    <h4>Dashbord</h4>
	
<div class="col-lg-12 col-md-12 col-xs-12 table-das">
<div class="table-responsive">          
  <table id="myDataTable" class="table table-striped table-bordered table-hover display">
      <thead>
          <tr>
              <th>Sr.</th>
              <th>
                  @Html.DisplayNameFor(model => model.jobid)
              </th>
              <th>
                  @Html.DisplayNameFor(model => model.jobTitle)
              </th>
              <th>
                  @Html.DisplayNameFor(model => model.orionCV)
              </th>
              <th>
                  @Html.DisplayNameFor(model => model.orionCOM)
              </th>
              <th>
                 Test Schedule
              </th>
              <th>
                  @Html.DisplayNameFor(model => model.orionPASS)
              </th>
              <th>
                  @Html.DisplayNameFor(model => model.orionMEET)
              </th>
              <th>
                  @Html.DisplayNameFor(model => model.ShortListed)
              </th>
              <th>
                  @Html.DisplayNameFor(model => model.hired)
              </th>
          </tr>
          </thead>
          @{int rowNo = 0;}
          @foreach (var item in Model)
          {
              <tr class="dashboard-left-text">                  
                  <td>@(rowNo += 1) </td>
                  <td>
                      <a href='@Url.Action("JobView", "jobDetails",new { jobID=BaseUtil.encrypt( @item.jobid.ToString()) })'>#@item.jobid</a>  
                  </td>
                  <td>
                      @Html.DisplayFor(modelItem => item.jobTitle)
                  </td>
                  <td>
                      <a href='@Url.Action("cvShortlisted", "companyDetails",new { jobID=@item.jobid })'>@item.orionCV</a>
                      
                  </td>
                  <td>
                      <a href='@Url.Action("Comm", "Employer",new { jobID=@item.jobid })'>@item.orionCOM</a>
                  </td>
                  
                  <td>
                      <a href='@Url.Action("scheduleTestDashboard", "Employer",new { jobID=@item.jobid })'>@item.orionExamScheduled</a>
                  </td>
                  <td>
                      <a href='@Url.Action("ProceedToMeetSchedule", "Employer",new { jobID=@item.jobid })'>@item.orionPASS</a>
                  </td>
                  <td>
                      <a href='@Url.Action("CandidateComm", "Employer",new { jobID=@item.jobid })'>@item.orionMEET</a>
                  </td>
                  <td>
                      <a href='@Url.Action("ShortlistedCadidates", "Employer",new { jobID=@item.jobid })'>@item.ShortListed</a>
                  </td>
                  <td>
                      <a href='@Url.Action("HiredCandidateList", "Employer",new { jobID=@item.jobid })'>@item.hired</a>
                  </td>
              </tr>
          }
</table>
</div>
</div>

