	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css"rel="stylesheet">
	<link href="~/css/custome_style.css" rel="stylesheet">
  
</head>

<body class="register-page">
    <div class="container-fluid padding-none">
        <div class="container">
            <div class="col-xs-6 col-md-6 col-sm-6 padding-none"><img src="~/images/auxo-login.png"></div>
            <div class="col-xs-6 col-md-6 col-sm-6 text-right padding-none"><img src="~/images/spota-needle-login.png"></div>
            <div class="register-main">
                <div class="col-sm-12 employe_zone_text_login">
                    @Html.ActionLink("Employer Zone", "Employerlogin")
                    </div>
                    <div class="col-lg-10 col-lg-offset-1">
                        @if (TempData["result"] != null)
                        {
                            var result = Convert.ToString(TempData["result"]);
                            if (result == "Registred")
                            {
                                <div style="width:100%" class="alert alert-success">You have been registered. Please check your email for activation link.</div>
                            }
                            else if (result == "Activated")
                            {
                                <div style="width:100%" class="alert alert-success">Your Account has been activated successfully. Kindly use the password provided in the email to login</div>
                            }
                            else
                            {
                                <div style="width:100%" class="alert alert-danger">@result</div>
                            }
                        }
                    </div>
                    <div class="col-sm-5 col-md-5 col-xs-12">
                        <div class="form-box">
                            <div class="form-top">
                                <div class="form-top-left">
                                    <p><strong>Already have an account?</strong></p>
                                    <h3>Login Here</h3>
                                </div>
                               <!--<div class="form-top-right"><i class="fa fa-key"></i> </div>-->
                            </div>
                            <div class="form-bottom">
                                @*- ----------candidate login---------------------*@
                                @Html.Action("logincandidate")
                            </div>
                        </div>
                      
                        
                    </div>
                    <div class="col-sm-2"></div>
                    <div class="col-sm-5 col-md-5 col-xs-12">
                        <div class="form-box">
                            <div class="form-top">
                                <div class="form-top-left">
                                    <p><strong>Don't have an account?</strong></p>
                                    <h3>Register Now</h3>
                                </div>
                                <!--<div class="form-top-right"> <i class="fa fa-pencil"></i> </div>-->
                            </div>
                            <div class="form-bottom">
                                @*------------------ candidate registration-------------------------*@

                                @Html.Action("candidateReg")
                            </div>
                          
                        </div>
                    </div>
					<div class="login_ragister_btns_sosial_btn_text_center">
					<img class="or_img_login_page" src="~/images/orimg.jpg" alt="img">
					<div class="alternate">Alternate Way to Login </div>
					
					<div class="social-login-buttons">
                           
							<a href="~/Account/Facebook" class="facebook_icon_login_page">
							<i class="fa fa-facebook" aria-hidden="true"></i> Facebook
							</a> 
							<a href="https://www.linkedin.com/oauth/v2/authorization?response_type=code&amp;client_id=772sds0w0tvipg&amp;redirect_uri=https%3A%2F%2Fspotaneedle.com%2FAccount%2FlinkdInReg&amp;state=987654321" class="linkdin_icon_login_page">
							<i class="fa fa-linkedin" aria-hidden="true"></i> Linkedin
							</a> 
							
							<a href="~/Account/googleReg" class="google_plus_icon_login_page"><i class="fa fa-google-plus" aria-hidden="true"></i> Google Plus</a> </div>
					</div>
                </div>

            <div class="login-bottom col-md-12 col-sm-12 col-xs-12"><img class="powered_by_logo_hd" src="~/images/login-shadow.png" width="713" height="38"></div>
            <div class="col-md-12 col-xs-12 col-sm-12 text-right text_center_powered"><img  src="~/images/powerby.png"></div>
        </div>
    </div>
</body>

</html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js">

</script>

