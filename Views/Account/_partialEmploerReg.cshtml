@model NewLetter.Models.empRegistration 
@using (Html.BeginForm("partialEmployerReg", "Account", FormMethod.Post, new { @class = "login-form" }))
{
                @Html.AntiForgeryToken()


    @Html.ValidationMessageFor(model => model.companyName, "", new { @class = "text-danger" })
        <div class="input-group">           
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                @Html.TextBoxFor(model => model.companyName,  new { @class = "form-control add_border_line", placeholder = "Organization Name" } )
               
            </div>

            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        <div class="input-group">           
            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control add_border_line", placeholder = "Email" })
               
        </div>
        @Html.ValidationMessageFor(model => model.website, "", new { @class = "text-danger" })
        <div class="input-group">
         
            <span class="input-group-addon"><i class="glyphicon glyphicon-globe"></i></span>
                @Html.TextBoxFor(model => model.website, new { @class = "form-control add_border_line", placeholder = "Website URL" })            
           
        </div>

        @Html.ValidationMessageFor(model => model.mobile, "", new { @class = "text-danger" })
        <div class="input-group">
          
            <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                @Html.TextBoxFor(model => model.mobile, new { @class = "form-control add_border_line", placeholder = "Mobile" })
        </div>

        @Html.ValidationMessageFor(model => model.employerTypeID, "", new { @class = "text-danger" })
        <div class="input-group">     
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>      
                @Html.DropDownList("employerTypeID", null, new { @class = "form-control add_border_line" })              
          
        </div>

       <div class="col-md-4 col-xs-4 col-xs-4 padding-none padding-none_login">
    <input type="submit" class="btn login_ragister_btn" value="Register" />
</div>

}
