@model  IEnumerable<NewLetter.Models.slotsInfo>

@{
    ViewBag.Title = "selectmeet";
    Layout = "~/Views/Shared/_Layout_Employer.cshtml";
}
@{
    long id = 0;
    long jid = 0;
}



<script type="text/javascript">
    var jqOld = jQuery.noConflict();
    jqOld(document).ready(function () {
        jqOld(".datepicker").datepicker();
    });
</script>

<h2>Select Meeting Date and Time</h2>

@using (Html.BeginForm("selectmeet", "profile", FormMethod.Post, new { id = "msform", qenID= id,jobID = jid }))
{
    @Html.AntiForgeryToken()
    <div class="col-lg-12">
        @{ var dAt = ViewBag.dAt;}
        <span>date:</span>
        @{ if (dAt != "")
            {
                @Html.TextBox("txt_date", (string)dAt, new { @class = "datepicker", Placeholder = "Date", id = "txt_date", maxLength = "10" })
                

            }
            else
            {
                @Html.TextBox("txt_date", null, new { @class = "datepicker", Placeholder = "Date", id = "txt_date" })
            }
        }

    </div>
    <div class="col-lg-12">
        <input type="submit" value="view" />
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.slotID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.slotTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.blocked)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.slotID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.slotTime)
                </td>
                <td>
                    @{ if (item.blocked == "Available")
                        {
                            <span class="greenColor">@item.blocked</span>
                        }
                        else if (item.blocked == "booked by HR")
                        {
                            <span class="blueColor">@item.blocked</span>
                        }
                        else if (item.blocked == "blocked by HR")
                        {
                            <span class="redColor">@item.blocked</span>
                        }
                        else
                        {
                            @Html.ActionLink(item.blocked, "", "", new { qenID = item.qenID })
                        }
                    }

                </td>
                <td>
                    @{ if (item.blocked == "Available")
                        {
                            <input value="Book Meeting" type="button" onclick="return block(@item.slotID);" />
                        }
                        else if (item.blocked == "booked by HR")
                        {
                            <input value="Not Avaiable" type="button"/>
                        }
                        else if (item.blocked == "blocked by HR")
                        {

                        }
                        else
                        {
                            <input type="button" value="View" onclick="location.href='@Url.Action("CandidateComm", "Employer", new { jobID = item.jobID, qenID = item.qenID })'" />
                        }
                    }

                </td>
                @{id = @item.qenID;}@{jid = @item.jobID;}
                   
            </tr>
            
            
                        }
        

    </table>
    <input type="hidden" value="@id" name="qenID" id="qenID" />
    <input type="hidden" value="@jid" name="jobID" id="jobID"/>


                        }
<style>
    .redColor {
        color: red;
    }

    .blueColor {
        color: blue;
    }

    .greenColor {
        color: green;
    }
</style>

<script>
        var dat = "";
        jqOld.fn.serializeObject = function () {
            var o = {};
            var a = this.serializeArray();
            jqOld.each(a, function () {
                if (o[this.name] !== undefined) {
                    if (!o[this.name].push) {
                        o[this.name] = [o[this.name]];
                    }
                    o[this.name].push(this.value || '');
                } else {
                    o[this.name] = this.value || '';
                }
            });
            return o;
        }
        var form = jqOld("#msform").serializeObject();
        function Get_Available(slotID) {
            dat = document.getElementById('txt_date').value;

            if (dat == "undefined") dat = "";
            debugger
            jqOld.ajax({

                url: "Get_Available",
                data: { 'slotID': slotID, 'dat': dat },

                success: function (data) {
                    debugger
                    if (data == "OK") {
                        debugger
                        alert("Record updated");
                        location.href = 'http://localhost:51126/TimeSlots/SlotsInformation?dat=' + dat;
                    }
                    else {
                        alert("Error occured, Record not updated");
                    }
                }
            });
        }
    

        function block(slotID) {
            debugger 
            dat= document.getElementById('txt_date').value;
            ID = document.getElementById("qenID").value;
            JID = document.getElementById("jobID").value;
            if (dat == "undefined") dat = "";
            debugger
            jqOld.ajax({
                url: "bookMeet",
                data: { 'slotID': slotID, 'dat': dat ,'qenID':ID,'jobID':JID},

                success: function (data) {
                    debugger
                    if (data == "OK") {
                        debugger
                        alert("Record updated");
                        location.href = 'http://localhost:51126/profile/SlotsInformation?dat=' + dat;
                    }
                    else {
                        alert("Error occured, Record not updated");
                    }
                }
            });
        }

</script>



