        <script>
            function convertToDate(str) {
                debugger
                var dd = str.substring(0, 2);
                var mm = str.substring(3, 5);
                var yy = str.substring(6, 11);
                var dat = mm + "/" + dd + "/" + yy;
                var dt = new Date(dat);
                return dt;
            }

