@model NewLetter.Models.qenSecondary

@using (Html.BeginForm("highSchool","profile",FormMethod.Post,new {@class = "form_graduation_margin_edit_mode"})) 
{
    @Html.AntiForgeryToken()

    
        <h4 class="post_graduation_ttl_adit_mod">High School</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-md-12 col-sm-12 margin-20 padding_lbl_threee">
        <div class="col-md-6 col-sm-12 padding_lbl_threee rgv_color_bg_main min_height_highseconder_school_to">
            <div class="col-md-12 col-sm-12 padding_lbl_threee">
                <div class="form-group">
                    @Html.LabelFor(model => model.secondaryBoard, htmlAttributes: new { @class = "col-md-6 col-sm-6 col-xs-12 control-label" })
                    <div class="col-md-6 col-sm-6 col-xs-12 padding-none">
                        @Html.DropDownListFor(model => model.secondaryBoard, new SelectList(ViewBag.boardNames, "Value", "Text"), "Board", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.secondaryBoard, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>        
            @Html.HiddenFor(model => model.qenID)    
                <div class="col-md-12 col-sm-12 padding_lbl_threee">
                    <div class="form-group">
                        @Html.LabelFor(model => model.schoolName, htmlAttributes: new { @class = "col-md-6 col-sm-6 col-xs-12 control-label" })
                        <div class="col-md-6 col-sm-6 col-xs-12 padding-none">
                            @Html.TextBoxFor(model => model.schoolName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.schoolName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>            
            
                <div class="col-md-12 col-sm-12 padding_lbl_threee">
                    <div class="form-group">
                        @Html.LabelFor(model => model.city, htmlAttributes: new { @class = "col-md-6 col-sm-6 col-xs-12 control-label" })
                        <div class="col-md-6 col-sm-6 col-xs-12 padding-none">
                            @Html.EditorFor(model => model.city, new { htmlAttributes = new { @class = "form-control", @id = "city" } })
                            @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            
        </div>
        <div class="col-md-6 col-sm-12 padding_lbl_threee rgv_color_bg_main_to min_height_highseconder_school_to">
            <div class="col-md-12 col-sm-12 padding_lbl_threee">
                <div class="form-group">
                    @Html.LabelFor(model => model.secondaryPassYear, htmlAttributes: new { @class = "col-md-6 col-sm-6 col-xs-12 control-label" })
                    <div class="col-md-6 col-sm-6 col-xs-12 padding-none">
                        @Html.DropDownListFor(model => model.secondaryPassYear, new SelectList(ViewBag.years, "Value", "Text"), "Year", new { @id = "yearselect" })
                        @Html.ValidationMessageFor(model => model.secondaryPassYear, "", new { @class = "text-danger" })
                    </div>
                </div>
              </div>

            <div class="col-md-12 col-sm-12 padding_lbl_threee">
                <div class="form-group">
                    @Html.LabelFor(model => model.secondaryGradeOrPercentage, htmlAttributes: new { @class = "col-md-6 col-sm-6 col-xs-12 control-label" })
                    <div class="col-md-6 col-sm-6 col-xs-12 padding-none">
                        @Html.DropDownListFor(model => model.secondaryGradeOrPercentage, new SelectList(ViewBag.grades, "Value", "Text"), "Grade / Percentage", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.secondaryGradeOrPercentage, "", new { @class = "text-danger" })
                    </div>
                </div>
              </div>




                <div class="form-group">
                    <div class="col-md-12 text-right academic">
                        @if (Model.schoolName == null)
                {
                            <input type="submit" value="Add" class="btn btn-default" />
                        }
                        else
                        {
                            <input type="submit" value="Update" class="btn btn-default" />
                        }
                    </div>
                </div>
            </div>
        </div>
}


            <script>
                var input = document.getElementById('city');
                var autocomplete = new google.maps.places.Autocomplete(input);
            </script>

            <script src="~/Scripts/jquery.validate.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
